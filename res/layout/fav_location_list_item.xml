<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

    <ImageView android:id="@+id/contacts_photo"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/ic_launcher"
            />


    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            >
        <TextView android:layout_height="wrap_content" android:id="@+id/fav_name"
                  android:paddingLeft="10dp"
                  android:layout_width="wrap_content" android:textSize="16sp"
                  android:textAppearance="?android:attr/textAppearanceMedium"
                  android:textColor="@color/table_text_selector"/>
        />
        <TextView android:layout_height="wrap_content" android:id="@+id/fav_location"
                  android:paddingLeft="10dp"
                  android:layout_width="wrap_content" android:textSize="16sp"
                  android:textAppearance="?android:attr/textAppearanceMedium"
                  android:textColor="@color/table_text_selector"/>
        />

    </LinearLayout>


</LinearLayout>
